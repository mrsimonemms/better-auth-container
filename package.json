{
  "name": "better-auth-container",
  "version": "0.0.0",
  "description": "Use Better Auth as a container",
  "author": "Simon Emms <simon@simonemms.com>",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon ./src/app.ts | pino-pretty -tlc",
    "format": "prettier --write \"**/*.?(c|m){j,t}s\"",
    "lint": "eslint \"**/*.?(c|m)ts\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "ts-node"
    },
    "ext": "ts",
    "watch": [
      "src"
    ]
  },
  "dependencies": {
    "better-auth": "^1.3.9",
    "fastify": "^5.6.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^22.14.1",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-prettier": "^5.1.3",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.2.5",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.20.0"
  }
}
